<?php echo $this->title($this->pageTitle) ?>

<?php if (!count($this->results)) : ?>
    <p class="empty-query">
        <?php echo $this->translate('search')->__('Search returns no results')?>
    </p>
    <?php return; ?>
<?php endif; ?>

<?php echo $this->render('index/result/paging.phtml') ?>

<ul class="product-listing product-listing-list">
<?php foreach ($this->results as $result) :
    switch ($result['type']) :
        case 'page':
            $this->page = $result;
            echo $this->render('index/result/page.phtml');
            break;
        case 'product':
        default:
            $this->product = $result;
            echo $this->render('index/result/product.phtml');
            break;
    endswitch;
endforeach; ?>
</ul>

<?php echo $this->render('index/result/paging.phtml') ?>